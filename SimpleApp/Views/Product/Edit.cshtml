@model SimpleApp.Entities.Products
@{
    ViewData["Title"] = "Edit Product";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white text-center">
                    <h4>Edit Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" /> 

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Product Name" required>
                            <label for="Name">Product Name</label>
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Product Description" rows="3" required></textarea>
                            <label for="Description">Product Description</label>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <input type="hidden" asp-for="CreatedAt" />
                     
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark">Back</a>
                            <button type="submit" class="btn btn-dark">Update Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
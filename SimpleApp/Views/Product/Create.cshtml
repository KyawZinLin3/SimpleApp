@model SimpleApp.Entities.Products
@{
    ViewData["Title"] = "Create Product";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-none">
                <div class="card-header bg-black text-white text-center">
                    <h4>Add New Product</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Product Name" required>
                            <label for="Name">Product Name</label>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" class="form-control" placeholder="Product Description" rows="3" required></textarea>
                            <label for="Description">Product Description</label>
                        </div>
                      
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-dark">Back</a>
                            <button type="submit" class="btn btn-dark">Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>